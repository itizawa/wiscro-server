{
  "name": "line-stock",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:itizaworld/line-stock.git",
  "author": "itizawa <itizawa.pen@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf '{src,test}/**/*.{js,js.map}'",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "test": "yarn clean && yarn test:lint && yarn test:coverage",
    "test:unit": "cross-env NODE_ENV=test mocha",
    "test:coverage": "cross-env NODE_ENV=test nyc mocha",
    "test:lint": "tslint --project tsconfig.json",
    "test:lint:fix": "tslint --project tsconfig.json --fix",
    "tsc": "tsc --project tsconfig.json",
    "tsc:w": "tsc --project tsconfig.json -w",
    "start": "nodemon --watch \"src/**/*.ts\" --ignore \"node_modules/**/*\" --exec ts-node src/index.ts",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "docker:build": "yarn build && docker-compose build",
    "lint": "eslint src/**/**.ts",
    "dev": "env-cmd -f ./.env ts-node-dev -r tsconfig-paths/register src/index.ts",
    "deploy": "yarn build && gcloud run deploy --source ."
  },
  "devDependencies": {
    "@tsed/common": "^7.75.0",
    "@tsed/core": "^7.75.0",
    "@tsed/di": "^7.75.0",
    "@tsed/exceptions": "^7.75.0",
    "@tsed/json-mapper": "^7.75.0",
    "@tsed/platform-express": "^7.75.0",
    "@tsed/schema": "^7.75.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.7",
    "@types/jest": "29.5.6",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.0.0",
    "@types/passport": "^1.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "8.52.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "jest": "^29.5.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.0.0",
    "ts-jest": "29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cheerio-httpcli": "^0.8.3",
    "compression": "^1.7.4",
    "connect-mongo": "^5.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "env-cmd": "^10.1.0",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.0.1",
    "express-session": "^1.17.3",
    "method-override": "^3.0.0",
    "mongoose": "^7.0.3",
    "node-readability": "^3.0.0",
    "openai": "^4.0.0",
    "passport": "^0.6.0",
    "passport-google-oauth": "2.0.0",
    "pino": "^8.15.1",
    "pino-pretty": "^10.2.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "~(.*)$": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
