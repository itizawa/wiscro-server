{
  "name": "line-stock",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:itizaworld/line-stock.git",
  "author": "itizawa <itizawa.pen@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "yarn build && node dist/index.js",
    "lint": "eslint src/**/**.ts",
    "dev": "env-cmd -f ./.env ts-node-dev -r tsconfig-paths/register src/index.ts",
    "test": "jest",
    "deploy": "yarn build && gcloud run deploy --source ."
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jest": "29.5.5",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.15.8",
    "@types/passport": "^1.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "8.49.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "ts-jest": "29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@line/bot-sdk": "^7.5.2",
    "cheerio-httpcli": "^0.8.3",
    "connect-mongo": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "env-cmd": "^10.1.0",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.0.1",
    "express-session": "^1.17.3",
    "mongoose": "^7.0.3",
    "node-readability": "^3.0.0",
    "passport": "^0.6.0",
    "passport-google-oauth": "2.0.0",
    "pino": "^8.15.1",
    "pino-pretty": "^10.2.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "~(.*)$": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
